
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="contact_bg" style="background-size:cover;">
    <div class="mainbanner-content row">
        <div class="spacing-120"></div>
        <div class="large-4 columns bigh1">
            <h1>Contact Us</h1>
            <span>We are here to help</span>
            <br><br>
            <span>Support Hours:</span>
            <p>
                Monday – Friday<br>
                7am-5pm MST
                <br><br>
                Sales: 866-913-1482<br>
                Customer Service: 888-681-1214<br>
                <span class="darkorange">customersupport@amazingmail.com</span>
            </p>
            <span>Amazingmail</span>
            <p>
                2130 S 7th Avenue, Suite 170<br>
                Phoenix, AZ 85007
            </p>
        </div>
        <div class="large-8 columns formcontainer">
            <form action="#" method="post">
                <div class="large-12 columns">
                    <div class="large-6 columns"><input type="text" placeholder="*First Name"></div>
                    <div class="large-6 columns"><input type="text" placeholder="*Last Name"></div>
                </div>
                <div class="large-12 columns">
                    <div class="large-6 columns"><input type="text" placeholder="*Email Address"></div>
                    <div class="large-6 columns"><input type="text" placeholder="*Phone Number"></div>
                </div>
                <div class="large-12 columns">
                    <textarea placeholder="*Comments"></textarea>
                    <input type="submit" value="SUBMIT" class="orangebutton">
                </div>
            </form>
        </div>
    </div>
</div>

